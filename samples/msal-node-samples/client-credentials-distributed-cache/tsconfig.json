{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src",
    "package.json"
  ],
  "exclude": [
    "test/**/*.spec.ts"
  ]
}